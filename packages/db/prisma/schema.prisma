generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(uuid())
  fullName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  project   project[]
}

model project {
  id            String         @id @default(uuid())
  prompt        String
  userId        String
  finalVideoUrl String?
  sceneFlow     String?
  totalScene    Int?
  user          user           @relation(references: [id], fields: [userId])
  createdAt     DateTime       @default(now())
  status        PROJECT_STATUS
  updatedAt     DateTime       @updatedAt
  scene         scene[]
}

enum PROJECT_STATUS {
  QUEUED
  PLAINNING
  GENERATING_SCENES
  COMPLETED
}

model scene {
  id          String       @id @default(uuid())
  sequence    Int
  title       String
  description String
  className   String
  code        String
  url         String?  @default("null")
  status      SCENE_STATUS
  projectId   String
  project     project      @relation(references: [id], fields: [projectId])
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum SCENE_STATUS {
  PENDING
  ERROR_REGENERATING
  COMPLETED
}
