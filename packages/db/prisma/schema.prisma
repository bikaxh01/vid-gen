generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String    @id @default(uuid())
  fullName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  project   project[]
}

model project {
  id            String   @id @default(uuid())
  title         String?
  userId        String
  finalVideoUrl String?
  sceneFlow     Json ?
  user          user     @relation(references: [id], fields: [userId])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  scene         scene[]
}



model scene {
  id          String   @id @default(uuid())
  sequence    String
  title       String
  description String
  code        String
  projectId   String
  project     project  @relation(references: [id], fields: [projectId])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
